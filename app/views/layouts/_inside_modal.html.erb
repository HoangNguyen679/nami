<div class="modal" data-modal-class="<%= modal_class %>">
  <div class="modal-container">
    <div class="modal-content">
      <div class="title-bar">
        <p class="title"><%= title %></p>
        <div class="close-button js-modal-close">
          <%= evil_icon "ei-close" %>
        </div>
      </div>
      <div class="modal-body">
        <%= yield %>
      </div>
    </div>
  </div>
</div>
